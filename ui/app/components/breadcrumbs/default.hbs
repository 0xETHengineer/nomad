{{! template-lint-disable no-unknown-arguments-for-builtin-components }}
<li data-test-breadcrumb-default
  class="{{if @crumb.peers "has-peers"}}"
  {{(modifier
    this.maybeKeyboardShortcut
    label="Go up a level"
    pattern=(array "u")
    menuLevel=true
    action=(action this.traverseUpALevel @crumb.args)
    exclusive=true
  )}}
>

{{#if @crumb.peers}}
  <span class="peer-dropdown-container">
    {{#if @crumb.title}}
      <dl>
        <dt>
          {{@crumb.title}}
        </dt>
        <dd>
          <Breadcrumbs::Peers @peers={{@crumb.peers}}>
            {{@crumb.label}}
          </Breadcrumbs::Peers>
        </dd>
      </dl>
    {{else}}
      <Breadcrumbs::Peers @peers={{@crumb.peers}}>
        {{@crumb.label}}
      </Breadcrumbs::Peers>
    {{/if}}
  </span>
{{else}}
  <LinkTo
    @params={{@crumb.args}}
    data-test-breadcrumb={{@crumb.args.firstObject}}>
    {{#if @crumb.title}}
      <dl>
        <dt>
          {{@crumb.title}}
        </dt>
        <dd>
          {{@crumb.label}}
        </dd>
      </dl>
    {{else}}
      {{@crumb.label}}
    {{/if}}
  </LinkTo>
{{/if}}
</li>